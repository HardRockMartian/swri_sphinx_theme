/* set for shadow areas */
#shadow_row {
    -webkit-box-shadow: 7ps 8px 6px -6px black;
    -moz-box-shadow: 7px 8px 6px -6px black;
    box-shadow: 7px 8px 6px -6px black;
    height:auto;
    font-weight:400; 
    background-image: url("http://www.boulder.swri.edu/static/images/lightpaper.png");
}

#shadow_header {
    -webkit-box-shadow: 7ps 8px 6px -6px black;
    -moz-box-shadow: 7px 8px 6px -6px black;
    box-shadow: 7px 8px 6px -6px black;

}
#shadow_footer {
    -webkit-box-shadow: 7ps 8px 6px -6px black;
    -moz-box-shadow: 7px 8px 6px -6px black;
    box-shadow: 7px 8px 6px -6px black;
}

#colsii {
    -moz-column-count: 2;
    -moz-column-gap: 20px;
    -webkit-column-count: 3;
    -webkit-column-gap: 20px;
    column-count: 2;
    column-gap: 20px;
}

/* for old office background. TBRemoved */
